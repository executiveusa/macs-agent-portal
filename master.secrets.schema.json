{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Master Secrets File Schema",
  "description": "JSON Schema for master.secrets.json - validates structure and required fields",
  "type": "object",
  "required": ["version", "projects"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "description": "Semantic version of the secrets file format"
    },
    "description": {
      "type": "string",
      "description": "Human-readable description of the file"
    },
    "last_updated": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last update"
    },
    "projects": {
      "type": "object",
      "description": "Map of project IDs to project configurations",
      "additionalProperties": {
        "type": "object",
        "required": ["name", "secrets"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Human-readable project name"
          },
          "description": {
            "type": "string",
            "description": "Project description"
          },
          "environment": {
            "type": "string",
            "enum": ["development", "staging", "production"],
            "description": "Deployment environment"
          },
          "secrets": {
            "type": "object",
            "required": ["core"],
            "properties": {
              "core": {
                "type": "object",
                "description": "Required secrets for core functionality",
                "additionalProperties": {
                  "type": "string"
                }
              },
              "optional": {
                "type": "object",
                "description": "Optional secrets for enhanced features",
                "additionalProperties": {
                  "type": "string"
                }
              }
            }
          },
          "deployment": {
            "type": "object",
            "properties": {
              "platform": {
                "type": "string",
                "enum": ["railway", "coolify", "vercel", "netlify", "other"],
                "description": "Primary deployment platform"
              },
              "project_id": {
                "type": "string",
                "description": "Platform-specific project identifier"
              },
              "service_id": {
                "type": "string",
                "description": "Platform-specific service identifier"
              },
              "last_deployed": {
                "type": "string",
                "format": "date-time",
                "description": "ISO 8601 timestamp of last deployment"
              }
            }
          },
          "fallback_hosts": {
            "type": "array",
            "description": "Alternative hosting platforms",
            "items": {
              "type": "object",
              "required": ["platform", "enabled"],
              "properties": {
                "platform": {
                  "type": "string",
                  "description": "Fallback platform name"
                },
                "enabled": {
                  "type": "boolean",
                  "description": "Whether this fallback is active"
                },
                "url": {
                  "type": "string",
                  "format": "uri",
                  "description": "Fallback platform URL"
                },
                "notes": {
                  "type": "string",
                  "description": "Additional configuration notes"
                }
              }
            }
          }
        }
      }
    },
    "global": {
      "type": "object",
      "description": "Global secrets shared across projects",
      "properties": {
        "railway": {
          "type": "object",
          "properties": {
            "api_token": {
              "type": "string",
              "description": "Railway API token for programmatic access"
            },
            "team_id": {
              "type": "string",
              "description": "Railway team identifier"
            }
          }
        },
        "coolify": {
          "type": "object",
          "properties": {
            "api_token": {
              "type": "string",
              "description": "Coolify API token"
            },
            "server_url": {
              "type": "string",
              "format": "uri",
              "description": "Coolify server URL"
            }
          }
        },
        "hostinger": {
          "type": "object",
          "properties": {
            "vpn_config": {
              "type": "string",
              "description": "VPN configuration file path or content"
            },
            "notes": {
              "type": "string",
              "description": "VPN setup notes"
            }
          }
        }
      }
    },
    "instructions": {
      "type": "object",
      "description": "Usage instructions for the secrets file",
      "properties": {
        "setup": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Setup instructions"
        },
        "security": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Security best practices"
        },
        "usage": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Usage guidelines"
        }
      }
    }
  }
}
